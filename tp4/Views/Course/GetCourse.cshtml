@{
    @model IEnumerable<TP4.Models.Student>

}


@{
    if (Model.Count() <= 0)
    {
        <h2 class="alert alert-warning">No one is having this course</h2>
    }
    else

    {
        <h1 class="text-center">List of @ViewBag.Id Students:</h1>
        <div class="text-center">
            
            @foreach( var student in Model){
            <div style="padding: 2vw;font-size:2ch;">
                @student.FirstName
            </div>

            }

        </div>
    }


}


<a asp-controller="Course" asp-action="index">BACK</a>